<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#10FFFFFF"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/dayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Lunes" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/dayActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        app:chipSpacingHorizontal="8dp"
        app:singleLine="true"
        app:singleSelection="false">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAddInterval"
            style="@style/Widget.MaterialComponents.Chip.Outlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="false"
            android:contentDescription="@string/add_interval"
            android:paddingHorizontal="12dp"
            android:text="@string/action_interval_short"
            app:chipIcon="@drawable/ic_add_interval"
            app:chipIconVisible="true"
            app:ensureMinTouchTargetSize="true" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAddQuantity"
            style="@style/Widget.MaterialComponents.Chip.Outlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="false"
            android:contentDescription="@string/add_quantity"
            android:paddingHorizontal="12dp"
            android:text="@string/action_quantity_short"
            app:chipIcon="@drawable/ic_add_interval"
            app:chipIconVisible="true"
            app:ensureMinTouchTargetSize="true" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipStartStop"
            style="@style/Widget.MaterialComponents.Chip.Outlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="false"
            android:contentDescription="@string/start"
            android:paddingHorizontal="12dp"
            android:text="@string/start"
            app:chipIcon="@drawable/ic_play_circle"
            app:chipIconVisible="true"
            app:ensureMinTouchTargetSize="true" />
    </com.google.android.material.chip.ChipGroup>

    <LinearLayout
        android:id="@+id/intervalsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="6dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/totalTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total: 0:00" />

        <TextView
            android:id="@+id/extraAutoTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Extra auto: 0:00" />

        <TextView
            android:id="@+id/extraManualTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Extra manual: 0:00" />
    </LinearLayout>
</LinearLayout>